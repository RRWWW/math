\]

\end_inset


\begin_inset Formula 
\[
\dfrac{\partial\mathcal{L}}{\partial\theta}-\dfrac{\mathrm{d}}{\mathrm{d}\phi}\dfrac{\partial\mathcal{L}}{\partial\dot{\theta}}=0
\]

\end_inset


\begin_inset Formula 
\begin{align*}
0= & \dfrac{\partial\mathcal{L}}{\partial\theta}-\dfrac{\mathrm{d}}{\mathrm{d}\phi}\dfrac{\partial\mathcal{L}}{\partial\dot{\theta}}=\dfrac{\partial\mathcal{L}\left(\phi,\dot{\theta}\right)}{\partial\theta}-\dfrac{\mathrm{d}}{\mathrm{d}\phi}\dfrac{\partial\mathcal{L}\left(\phi,\dot{\theta}\right)}{\partial\dot{\theta}}\\
= & 0-\dfrac{\mathrm{d}}{\mathrm{d}\phi}\dfrac{\partial\sqrt{1+\sin^{2}\phi\dot{\theta}^{2}}}{\partial\dot{\theta}}=\dfrac{\mathrm{d}}{\mathrm{d}\phi}\dfrac{\partial\left(1+\sin^{2}\phi\dot{\theta}^{2}\right)}{\sqrt{1+\sin^{2}\phi\dot{\theta}^{2}}\partial\dot{\theta}}\\
= & \dfrac{\mathrm{d}}{\mathrm{d}\phi}\dfrac{2\sin^{2}\phi\dot{\theta}}{\sqrt{1+\sin^{2}\phi\dot{\theta}^{2}}}\\
\dfrac{\sin^{2}\phi\dot{\theta}}{\sqrt{1+\sin^{2}\phi\dot{\theta}^{2}}}= & C_{1},C_{1}\text{ is constant independent of }\phi
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\dfrac{\sin^{2}\phi\dot{\theta}}{\sqrt{1+\sin^{2}\phi\dot{\theta}^{2}}}= & C_{1}\\
\dfrac{\sin^{4}\phi\dot{\theta}^{2}}{1+\sin^{2}\phi\dot{\theta}^{2}}= & C_{1}^{2}\\
\sin^{4}\phi\dot{\theta}^{2}= & C_{1}^{2}+\left(C_{1}\sin\phi\right)^{2}\dot{\theta}^{2}\\
\sin^{2}\phi\left(\sin^{2}\phi-C_{1}^{2}\right)\dot{\theta}^{2}= & C_{1}^{2},\text{ let }\sin\phi>0\\
