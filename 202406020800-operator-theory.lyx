\[
S=2^{0}+2^{1}+2^{2}+2^{3}+\cdots+2^{n}=\sum_{\nu=0}^{n}2^{{\scriptscriptstyle \nu}}
\]

\end_inset


\begin_inset Formula 
\[
\begin{aligned}S= & 2^{0}+2^{1}+2^{2}+2^{3}+\cdots+2^{n} & =\sum_{\nu=0}^{n}2^{{\scriptscriptstyle \nu}}\\
2S= & \qquad2\cdot2^{0}+2\cdot2^{1}+2\cdot2^{2}+2\cdot2^{3}+\cdots+2\cdot2^{n} & =2\sum_{\nu=0}^{n}2^{{\scriptscriptstyle \nu}}\\
= & \qquad2^{1}+2^{2}+2^{3}+\cdots+2^{n}+2^{n+1} & =\sum_{\nu=0}^{n}2^{{\scriptscriptstyle \nu+1}}\\
2S= & \qquad2^{1}+2^{2}+2^{3}+\cdots+2^{n}+2^{n+1} & =2\sum_{\nu=0}^{n}2^{{\scriptscriptstyle \nu}}\\
S= & 2^{0}+2^{1}+2^{2}+2^{3}+\cdots+2^{n} & =\sum_{\nu=0}^{n}2^{{\scriptscriptstyle \nu}}\\
2S-S= & \left(0-2^{0}\right)+\left(2^{1}-2^{1}\right)+\left(2^{2}-2^{2}\right)+\left(2^{3}-2^{3}\right)+\cdots+\left(2^{n}-2^{n}\right)+\left(2^{n+1}-0\right) & =2\sum_{\nu=0}^{n}2^{{\scriptscriptstyle \nu}}-\sum_{\nu=0}^{n}2^{{\scriptscriptstyle \nu}}\\
= & \left(-2^{0}\right)+\left(0\right)+\left(0\right)+\left(0\right)+\cdots+\left(0\right)+\left(2^{n+1}\right)\\
= & \left(-2^{0}\right)+\left(2^{n+1}\right)\\
\left(2-1\right)S= & 2^{n+1}-2^{0} & =\left(2-1\right)\sum_{\nu=0}^{n}2^{{\scriptscriptstyle \nu}}\\
S= & 2^{n+1}-1=\sum_{\nu=0}^{n}2^{{\scriptscriptstyle \nu}} & \forall n\in\mathbb{N}
\end{aligned}
\]

