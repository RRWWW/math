\[
\begin{aligned}\sum_{\nu=0}^{n}ax^{{\scriptscriptstyle \nu}}= & a+ax^{1}+ax^{2}+ax^{3}+\cdots+ax^{n}\\
x\sum_{\nu=0}^{n}ax^{{\scriptscriptstyle \nu}}= & \qquad x\cdot ax^{0}+x\cdot ax^{1}+x\cdot ax^{2}+x\cdot ax^{3}+\cdots+x\cdot ax^{n}\\
\sum_{\nu=0}^{n}ax^{{\scriptscriptstyle \nu+1}}= & \qquad ax^{1}+ax^{2}+ax^{3}+\cdots+ax^{n}+ax^{n+1}\\
x\sum_{\nu=0}^{n}ax^{{\scriptscriptstyle \nu}}= & \qquad ax^{1}+ax^{2}+ax^{3}+\cdots+ax^{n}+ax^{n+1}\\
\sum_{\nu=0}^{n}ax^{{\scriptscriptstyle \nu}}= & ax^{0}+ax^{1}+ax^{2}+ax^{3}+\cdots+ax^{n}\\
