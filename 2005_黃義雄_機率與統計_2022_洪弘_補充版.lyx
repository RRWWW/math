 & = & \frac{\left(\left(\chi_{\left[2\right]}^{2}-z_{2}^{2}\right)z_{2}^{2}\right)^{\frac{-1}{2}}\mathrm{e}^{\frac{-\chi_{\left[2\right]}^{2}}{2}}}{\left(\sqrt{2\pi}\right)^{2}}
\end{eqnarray*}

\end_inset


\begin_inset Formula 
\begin{eqnarray*}
f_{\chi_{\left[2\right]}^{2}}\left(\chi_{\left[2\right]}^{2}\right) & = & \int_{0}^{\chi_{\left[2\right]}^{2}}f_{\chi_{\left[2\right]}^{2},Z_{2}^{2}}\left(\chi_{\left[2\right]}^{2},z_{2}^{2}\right)\,\mathrm{d}z_{2}^{2}\\
 & = & \int_{0}^{\chi_{\left[2\right]}^{2}}\frac{\left(\left(\chi_{\left[2\right]}^{2}-z_{2}^{2}\right)z_{2}^{2}\right)^{\frac{-1}{2}}\mathrm{e}^{\frac{-\chi_{\left[2\right]}^{2}}{2}}}{\left(\sqrt{2\pi}\right)^{2}}\,\mathrm{d}z_{2}^{2}\\
 & = & \frac{\mathrm{e}^{\frac{-\chi_{\left[2\right]}^{2}}{2}}}{\left(\sqrt{2\pi}\right)^{2}}\int_{0}^{\chi_{\left[2\right]}^{2}}\frac{\mathrm{d}z_{2}^{2}}{\sqrt{z_{2}^{2}}\sqrt{\chi_{\left[2\right]}^{2}-z_{2}^{2}}}\\
 & = & \frac{\mathrm{e}^{\frac{-\chi_{\left[2\right]}^{2}}{2}}}{\left(\sqrt{2\pi}\right)^{2}}\int_{0}^{\sqrt{\chi_{\left[2\right]}^{2}}}\frac{2\,\mathrm{d}\sqrt{z_{2}^{2}}}{\sqrt{\chi_{\left[2\right]}^{2}-z_{2}^{2}}}\\
 & \overset{\chi_{\left[2\right]}^{2}>0}{=} & \frac{2\mathrm{e}^{\frac{-\chi_{\left[2\right]}^{2}}{2}}}{\left(\sqrt{2\pi}\right)^{2}}\int_{0}^{1}\frac{\mathrm{d}\sqrt{\frac{z_{2}^{2}}{\chi_{\left[2\right]}^{2}}}}{\sqrt{1-\left(\sqrt{\frac{z_{2}^{2}}{\chi_{\left[2\right]}^{2}}}\right)^{2}}}
