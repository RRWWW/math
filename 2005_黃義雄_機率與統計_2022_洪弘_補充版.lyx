\begin_deeper
\begin_layout Itemize
simple consistent estimator = SCE
\begin_inset Formula 
\begin{eqnarray*}
 &  & \begin{cases}
\overset{n}{\underset{i=1}{,}}X_{i}\mbox{ is a random sample}\sim\mathrm{d}\left(\theta\right)\\
\hat{\Theta}=\hat{\theta}\left(\overset{n}{\underset{i=1}{,}}X_{i}\right)\mbox{ is to estimate }\theta\\
\forall\epsilon>0\left(\lim_{n\rightarrow\infty}\mathrm{P}\left(\left|\hat{\Theta}-\theta\right|>\epsilon\right)=0\right)\Leftrightarrow\forall\epsilon>0\left(\lim_{n\rightarrow\infty}\mathrm{P}\left(\left|\hat{\Theta}-\theta\right|\le\epsilon\right)=1\right)
\end{cases}\\
 & \Leftrightarrow & \begin{cases}
\overset{n}{\underset{i=1}{,}}X_{i}\mbox{ is a random sample}\sim\mathrm{d}\left(\theta\right)\\
\hat{\Theta}=\hat{\theta}\left(\overset{n}{\underset{i=1}{,}}X_{i}\right)\mbox{ is to estimate }\theta\\
\lim_{n\rightarrow\infty}\mathrm{P}\left(\hat{\Theta}\ne\theta\right)=0\Leftrightarrow\lim_{n\rightarrow\infty}\mathrm{P}\left(\hat{\Theta}=\theta\right)=1
\end{cases}\\
 & \overset{\ref{continuity-of-probability}}{\Leftrightarrow} & \begin{cases}
\overset{n}{\underset{i=1}{,}}X_{i}\mbox{ is a random sample}\sim\mathrm{d}\left(\theta\right)\\
\hat{\Theta}=\hat{\theta}\left(\overset{n}{\underset{i=1}{,}}X_{i}\right)\mbox{ is to estimate }\theta\\
\mathrm{P}\left(\lim_{n\rightarrow\infty}\hat{\Theta}\ne\theta\right)=0\Leftrightarrow\mathrm{P}\left(\lim_{n\rightarrow\infty}\hat{\Theta}=\theta\right)=1
\end{cases}\\
 & \Leftrightarrow & \hat{\Theta}\mbox{ is a SCE of }\theta\\
 & \Leftrightarrow & \hat{\Theta}\overset{\mathrm{P}}{\underset{n\rightarrow\infty}{\longrightarrow}}\theta
\end{eqnarray*}

\end_inset


\end_layout

