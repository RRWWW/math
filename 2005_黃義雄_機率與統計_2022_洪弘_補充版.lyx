\mathrm{M}\left(\xi\right)=\mathrm{E}\left(\mathrm{e}^{\xi X}\right) & = & \int_{-\infty}^{\infty}\mathrm{e}^{\xi x}\,\mathrm{d}\mathrm{P}\left(X=x\right)\\
 & = & \int_{-\infty}^{0}\mathrm{e}^{\xi x}\,\mathrm{d}\mathrm{P}\left(X=x\right)+\int_{0}^{\infty}\mathrm{e}^{\xi x}\,\mathrm{d}\mathrm{P}\left(X=x\right)\\
 & = & \int_{-\infty}^{0}\mathrm{e}^{\xi x}\cdot0\,\mathrm{d}x+\int_{0}^{\infty}\mathrm{e}^{\xi x}\cdot\dfrac{x^{\frac{n}{2}-1}\mathrm{e}^{\frac{-x}{2}}}{2^{\frac{n}{2}}\Gamma\left(\frac{n}{2}\right)}\,\mathrm{d}x\\
 & = & 0+\dfrac{\int_{0}^{\infty}x^{\frac{n}{2}-1}\mathrm{e}^{-\left(\frac{1}{2}-\xi\right)x}\,\mathrm{d}x}{2^{\frac{n}{2}}\Gamma\left(\frac{n}{2}\right)}\\
 & \overset{\ref{eq:gmfuncvar}}{=} & \dfrac{\frac{\Gamma\left(\frac{n}{2}\right)}{\left(\frac{1}{2}-\xi\right)^{\frac{n}{2}}}}{2^{\frac{n}{2}}\Gamma\left(\frac{n}{2}\right)}=\left(1-2\xi\right)^{\frac{-n}{2}}
\end{eqnarray*}

\end_inset


\begin_inset Formula 
\[
\mathrm{C}\left(\xi\right)=\ln\mathrm{M}\left(\xi\right)=\ln\left(1-2\xi\right)^{\frac{-n}{2}}=\frac{-n}{2}\ln\left(1-2\xi\right)
\]

\end_inset


\begin_inset Formula 
\begin{eqnarray*}
