\begin{eqnarray}
\left(E_{1}\cap E_{2}\right)\cup\left(E_{1}\cap\bar{E_{2}}\right) & = & \left(\left(E_{1}\cap E_{2}\right)\cup E_{1}\right)\cap\left(\left(E_{1}\cap E_{2}\right)\cup\bar{E_{2}}\right)\nonumber \\
 & = & E_{1}\cap\left(\left(E_{1}\cup\bar{E_{2}}\right)\cap\left(E_{2}\cup\bar{E_{2}}\right)\right)\nonumber \\
 & = & E_{1}\cap\left(\left(E_{1}\cup\bar{E_{2}}\right)\cap\Omega\right)\nonumber \\
