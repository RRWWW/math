\begin_inset Formula 
\begin{eqnarray*}
\mathrm{E}\left(X\right)-x_{0} & \overset{\left[2\right]}{=} & \left(\int_{-\infty}^{\infty}\left(x\cdot f\left(x\right)\right)\,\mathrm{d}x\right)-x_{0}\\
 & = & \int_{-\infty}^{\infty}\left(x\cdot f\left(x\right)\right)\,\mathrm{d}x-\int_{-\infty}^{\infty}\left(x_{0}\cdot f\left(x\right)\right)\,\mathrm{d}x\\
 & = & \int_{-\infty}^{\infty}\left(\left(x-x_{0}\right)\cdot f\left(x\right)\right)\,\mathrm{d}x\\
 & = & \frac{1}{2}\left(\int_{-\infty}^{\infty}\left(\left(x-x_{0}\right)\cdot f\left(x\right)\right)\,\mathrm{d}x+\int_{-\infty}^{\infty}\left(\left(x-x_{0}\right)\cdot f\left(x\right)\right)\,\mathrm{d}x\right)\\
 & = & \frac{1}{2}\left(\int_{x_{1}=-\infty}^{x_{1}=\infty}\left(\left(x_{1}-x_{0}\right)\cdot f\left(x_{1}\right)\right)\,\mathrm{d}x_{1}+\int_{x_{2}=-\infty}^{x_{2}=\infty}\left(\left(x_{2}-x_{0}\right)\cdot f\left(x_{2}\right)\right)\,\mathrm{d}x_{2}\right)\\
 & \overset{\begin{cases}
x_{1}=x_{0}+x_{1}'\\
x_{2}=-x_{2}'+x_{0}
\end{cases}}{=} & \frac{1}{2}\Bigl(\int_{x_{0}+x_{1}'=-\infty}^{x_{0}+x_{1}'=\infty}\left(\left(x_{0}+x_{1}'-x_{0}\right)\cdot f\left(x_{0}+x_{1}'\right)\right)\,\mathrm{d}\left(x_{0}+x_{1}'\right)\\
 &  & +\int_{-x_{2}'+x_{0}=-\infty}^{-x_{2}'+x_{0}=\infty}\left(\left(-x_{2}'+x_{0}-x_{0}\right)\cdot f\left(-x_{2}'+x_{0}\right)\right)\,\mathrm{d}\left(-x_{2}'+x_{0}\right)\Bigr)\\
 & = & \frac{1}{2}\Bigl(\int_{x_{1}'=-\infty}^{x_{1}'=\infty}\left(x_{1}'\cdot f\left(x_{0}+x_{1}'\right)\right)\,\mathrm{d}x_{1}'\\
 &  & -\int_{x_{2}'=\infty}^{x_{2}'=-\infty}\left(\left(-x_{2}'\right)\cdot f\left(-x_{2}'+x_{0}\right)\right)\,\mathrm{d}x_{2}'\Bigr)\\
 & = & \frac{1}{2}\left(\int_{-\infty}^{\infty}\left(x\cdot f\left(x_{0}+x\right)\right)\,\mathrm{d}x-\int_{\infty}^{-\infty}\left(\left(-x\right)\cdot f\left(-x+x_{0}\right)\right)\,\mathrm{d}x\right)\\
 & = & \frac{1}{2}\left(\int_{-\infty}^{\infty}\left(x\cdot f\left(x_{0}+x\right)\right)\,\mathrm{d}x+\int_{-\infty}^{\infty}\left(\left(-x\right)\cdot f\left(-x+x_{0}\right)\right)\,\mathrm{d}x\right)\\
 & = & \frac{1}{2}\int_{-\infty}^{\infty}\left(x\cdot f\left(x_{0}+x\right)+\left(-x\right)\cdot f\left(-x+x_{0}\right)\right)\,\mathrm{d}x
\end{eqnarray*}

\end_inset


\begin_inset Formula 
